{
  "name": "web_boilerplate",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "consolidate": "^0.13.1",
    "cookie-parser": "^1.3.5",
    "ejs": "^0.8.5",
    "errorhandler": "^1.4.2",
    "express": "^4.13.3",
    "method-override": "^2.3.5",
    "morgan": "^1.6.1",
    "multer": "^1.0.3",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^5.2.0",
    "esvalidate": "^0.1.3",
    "postcss-cli": "^1.5.0"
  },
  "config": {
    "test": "foobar"
  },
  "scripts": {
    "test": "echo test $npm_package_config_test",
    "esvalidate": "(find public/js -type f -name '*.js'; find *.js) | xargs esvalidate --format=sublime",
    "autoprefixer": "find public/css -type f -name '*.css' | xargs postcss --use autoprefixer -b 'last 2 versions' -d public/css/pages",
    "build": "npm run esvalidate"
  }
}
